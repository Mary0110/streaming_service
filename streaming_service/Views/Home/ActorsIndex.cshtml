@model System.Collections.Generic.List<streaming_service.Entities.Actor>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>actors</h2>

@foreach (var director in Model)
{
    <hr>
    <table class="table table-hover ">
        <tbody>
        <tr>
            <th scope="row"> name</th>
            <td>@director.ActorName.ToString()</td>
        </tr>
        <tr>
            <th scope="row">surname</th>
            <td>@director.ActorSurname.ToString()</td>
        </tr>
        <tr>
            <th scope="row">gender</th>
            <td>@director.Gender</td>
        </tr>
        <tr>
            <th scope="row">date</th>
            <td>@director.DateOfBirth.ToString("dd/MM/yyyy")</td>
        </tr>


        </tbody>
    </table>
}