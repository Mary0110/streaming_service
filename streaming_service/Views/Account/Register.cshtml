@{
    ViewData["Title"] = "Register";
}

@model RegisterModel

<h2>Register</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Login</label><br/>
            <input type="text" asp-for="Login"/>
            <span asp-validation-for="Login"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="Username">First Name</label><br/>
            <input type="text" asp-for="Username"/>
            <span asp-validation-for="Username"></span>
        </div>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="Gender">gender</label><br/>
            <input type="text" asp-for="Gender"/>
            <span asp-validation-for="Gender"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="Password">Password</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="ConfirmPassword">Confirm Password</label><br/>
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="DateOfBirth">Date Of Birth</label><br/>
            <input asp-for="DateOfBirth" type="date" max="2004-01-01">
            <span asp-validation-for="DateOfBirth"></span>
        </div>
        <div style="margin-top: 10px">
            <input type="submit" value="submit"/>
        </div>
</form>