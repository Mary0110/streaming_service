@{
    ViewData["Title"] = "Login";
}

@model LoginModel

<h2>Log In</h2>

<a asp-action="Register" asp-controller="Account">Register</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>

    <div>
        <div>
            <label asp-for="Login">Login</label><br/>
            <input asp-for="Login"/>
            <span asp-validation-for="Login"></span>
        </div>
        <div style="margin-top: 10px">
            <label asp-for="Password">Password</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div style="margin-top: 10px">
            <input type="submit" value="Log In"/>
        </div>
    </div>
</form>