@model streaming_service.Models.Admin.AddGenresToMovie

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>add genres</h2>

<form asp-action="AddGenresToMovie" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
 
        <select aclass="custom-select" id="inputGroupSelect01" style="margin-top: 10px" asp-for="@Model!.idOfSelectedGenres">
            <option selected>app</option>
            @foreach (var app in Model.Genres)
            {
                <option value="@app.GenreId">@app.GenreName  </option>
            }
        </select>
       
        <div style="margin-top: 10px">
            <input type="submit" value="submit"/>
        </div>

    </div>
</form>
