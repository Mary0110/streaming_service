@model streaming_service.Models.Admin.AddActorsToMovie

<h2>Add actor</h2>

<form asp-action="AddActorsToMovie" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
 
        <select aclass="custom-select" id="inputGroupSelect01" style="margin-top: 10px" asp-for="@Model!.idOfSelectedActor">
            <option selected>app</option>
            @foreach (var app in Model.Actors)
            {
                <option value="@app.ActorId">@app.ActorName  @app.ActorSurname </option>
            }
        </select>
       
        <div style="margin-top: 10px">
            <input type="submit" value="submit"/>
        </div>

    </div>
</form>
<form asp-action="AddGenresToMovie" asp-controller="Admin" asp-route-movie_id=@Model.m_id asp-anti-forgery="true" method="get">
<div style="margin-top: 10px">
    <input type="submit" value="Add genres"/>
</div>
</form>